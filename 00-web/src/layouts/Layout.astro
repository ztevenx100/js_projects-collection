---
import { ViewTransitions } from "astro:transitions"
import "../styles/_global.css"
import "../styles/_base.css"
import "../styles/_layout.css"
import "../styles/_utilities.css"

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <title>{title}</title>
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
        <meta name="generator" content={Astro.generator} />
        <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
        <meta name="msapplication-config" content="browserconfig.xml">
        <meta name="robots" content="noindex,nofollow">
        <meta name="language" content="Spanish">
        <meta name="author" content="Pedro Steven Castiblanco">
        <meta name="description" content="Proyectos en Javascript">
        <meta name="keywords" content="HTML5, CSS3, JavaScript, Programación">

        <!-- Open Graph Meta Tags -->
        <meta property="og:title" content="{title}">
        <meta property="og:description" content="{description}">
        <meta property="og:image" content="/assets/projects/{image}.webp">
        <meta property="og:url" content="https://example.com/{slug}">
        <meta property="og:type" content="website">

        <!-- Twitter Meta Tags -->
        <meta name="twitter:card" content="summary_large_image">
        <meta name="twitter:title" content="{title}">
        <meta name="twitter:description" content="{description}">
        <meta name="twitter:image" content="/assets/projects/{image}.webp">

        <ViewTransitions />
    </head>
    <body>
        <style is:global>
            body {
                margin: 0;
                padding: 0;
                font-family: Arial, sans-serif;
            }

            /* Diseño responsivo */
            @media (max-width: 768px) {
                body {
                    font-size: 14px;
                }

                h1 {
                    font-size: 1.5rem;
                }

                .container {
                    padding: 1rem;
                }
            }

            @media (min-width: 769px) and (max-width: 1024px) {
                body {
                    font-size: 16px;
                }

                h1 {
                    font-size: 2rem;
                }

                .container {
                    padding: 2rem;
                }
            }

            @media (min-width: 1025px) {
                body {
                    font-size: 18px;
                }

                h1 {
                    font-size: 2.5rem;
                }

                .container {
                    padding: 3rem;
                }
            }
        </style>
        <slot />
    </body>
</html>