---
import GitHubStar from "../components/GitHubStar/GitHubStar.astro"
import Header from "../components/Header/Header.astro"
import Footer from "../components/Footer/Footer.astro"
import Projects from "../components/Projects/Projects.astro"
import Layout from '../layouts/Layout.astro';
---

<Layout title="Proyectos en JavaScript">
    <main>
        <GitHubStar />

        <Header/>

        <section aria-labelledby="projects-title">
            <h2 id="projects-title">Lista de Proyectos</h2>
            <Projects />
        </section>

        <Footer/>
    </main>
</Layout>

<style is:global>
    @import '../styles/global.css';
</style>

<style is:global>
    header {
        margin-top: 2rem;

        & h1 {
            @media (min-width: 400px) {
                font-size: 1.5rem;
            }

            @media (min-width: 640px) {
                font-size: 2rem;
            }

            @media (min-width: 1024px) {
                font-size: 4rem;
            }
            & .text-gradient {
                background-image: var(--js-gradient);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-size: 400%;
                background-position: 0%;
                text-shadow: none;
                font-weight: 800;
            }
        }
        & .instructions {
            margin-bottom: 2rem;
            border: 1px solid var(--color-primary);
            background: var(--color-secondary);
            padding: 1.5rem;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
    }
    .instructions code {
        font-size: 0.8em;
        font-weight: bold;
        background: rgba(var(--accent), 0.2);
        color: var(--color-primary);
        border-radius: 4px;
        padding: 0.3em 0.4em;
    }
    .instructions strong {
        color: var(--color-primary);
        font-weight: 600;
    }
    .link-card-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
        gap: 2rem;
        padding: 0;
    }
</style>
