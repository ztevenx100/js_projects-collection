---
import "./gitHubStar.css"

const response = await fetch(
  "https://api.github.com/repos/ztevenx100/js_projects-collection"
)

const data = await response.json()

const starCounter = data.stargazers_count
---

<div class="git-section">
  <a
    class="git-section__link"
    href="https://github.com/ztevenx100/js_projects-collection"
    target="_blank"
    rel="noopener noreferrer"
  >
    <div class="git-section__logo" >
      <svg class="icon">
        <use xlink:href="/assets/svg/social-network.svg#svgGit"/>
      </svg>
    </div>

    <div class="git-section__tag ">
      <div
        class="git-section-tag__arrow h-4 w-4 border-y-8 border-l-0 border-r-8 border-solid border-gray-100 border-y-transparent group-hover:border-x-yellow-200"
      >
      </div>
      <div
        class="git-section-tag__label overflow-hidden flex flex-col h-8 items-center rounded-md bg-gray-100 px-4 font-medium text-xs justify-center group-hover:bg-yellow-200 transition w-36 relative"
      >
        <span class="git-section-tag__star absolute group-hover:animate-fade-out-up">
          {`${starCounter} ⭐️ en GitHub`}
        </span>
        <span class="git-section-tag__text absolute opacity-0 -translate-y-5 group-hover:animate-fade-in-up">
          ¡Deja tu estrella!
        </span>
      </div>
    </div>
  </a>
</div>
